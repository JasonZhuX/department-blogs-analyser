            <!--<property name="javax.persistence.jdbc.password" value="k0w2xim4j1wk5hkh31w1hwym4wmylk2jw3jwy3jj" />-->

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>

    <persistence-unit name="queryPersistenceUnit" transaction-type="RESOURCE_LOCAL">
